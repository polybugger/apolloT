<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_normal_margin"
            android:layout_marginLeft="@dimen/left_normal_margin"
            android:layout_marginRight="@dimen/right_normal_margin"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_normal_margin"
            android:layout_marginLeft="@dimen/left_normal_margin"
            android:layout_marginRight="@dimen/right_normal_margin"
            android:layout_marginBottom="@dimen/bottom_normal_margin"
            android:orientation="vertical" >

            <android.support.v7.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/time_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:hint="@string/time_start_hint"
                    android:textSize="@dimen/normal_text_size" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/time_end_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:hint="@string/time_end_hint"
                    android:textSize="@dimen/normal_text_size" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/days_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:hint="@string/days_hint"
                    android:textSize="@dimen/normal_text_size" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/room_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_normal_margin"
                android:inputType="text"
                android:hint="@string/room_hint"
                android:textSize="@dimen/normal_text_size" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/building_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_normal_margin"
                android:inputType="text"
                android:hint="@string/building_hint"
                android:textSize="@dimen/normal_text_size" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/campus_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_normal_margin"
                android:inputType="text"
                android:hint="@string/campus_hint"
                android:textSize="@dimen/normal_text_size" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/cancel_button" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_save_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/add_button" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>
